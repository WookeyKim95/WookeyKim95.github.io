<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>import sys
from collections import Counter

case = int(sys.stdin.readline())

pya = []
for i in range(case):
    a = int(sys.stdin.readline())
    pya.append(a)

if case == 1:
    print(pya[0])
    print(pya[0])
    print(pya[0])
    print(0)
    sys.exit()

pya = sorted(pya)
sys.stdout.write('%.0f\n' %(sum(pya) / (len(pya))))
sys.stdout.write('%.i\n' %(pya[len(pya)//2]))
cnt = Counter(pya) #ì•„í•˜ ì´ê±°ëŠ” ê° êµ¬ì„±ìš”ì†Œë³„ ëª‡ê°œì¸ì§€ tupleë¡œ ë‚˜íƒ€ë‚´ì£¼ëŠ”ê±°ê³ 
cnt = sorted(cnt.items(), key = lambda x: (-x[1],x[0])) # ì´ê±°ëŠ” tuple ì˜¤ë¥¸ìª½ì— ìˆëŠ”ë†ˆì„ ê¸°ì¤€ìœ¼ë¡œ ì •ë ¬í•˜ëŠ” ê¸°ì¤€ì¸ê°€

if cnt[0][1] == cnt[1][1] :
    print(cnt[1][0])
else:
    print(cnt[0][0])

